@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


    <div class="row h-100 justify-content-center">
            <!-- Login Form Section -->
            <div class="col-md-6 d-flex align-items-center">
                <div class="w-100">
                <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
                    <form id="account" method="post" class="p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100">Log in</button>
                        <div class="mt-3">
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Image Section -->
@*             <div class="col-md-6 d-none d-md-block" style="background: url('/images/loginpage.jpg') no-repeat center center; background-size: cover;">
                <!-- This div will display the image -->
            </div> *@
        </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
