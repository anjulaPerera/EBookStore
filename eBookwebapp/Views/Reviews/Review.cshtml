@model ReviewViewModel

@{
    ViewData["Title"] = "Create Review";
}

<h2>Review @Model.BookTitle</h2>

<form asp-action="SubmitReview">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BookTitle" class="control-label"></label>
        <input asp-for="BookTitle" class="form-control" value="@Model.BookTitle" />
    </div>


    <div class="form-group">
        <label asp-for="BookID" class="control-label"></label>
        <input asp-for="BookID" class="form-control" value="@Model.BookID" />
    </div>


    <div class="form-group">
        <label asp-for="CustomerID" class="control-label"></label>
        <input asp-for="CustomerID" class="form-control" value="@Model.CustomerID" />
    </div>



    <div class="form-group">
        <label asp-for="OrderID" class="control-label"></label>
        <input asp-for="OrderID" class="form-control" value="@Model.OrderID" />
    </div>



    <div class="form-group">
        <label asp-for="ReviewText"></label>
        <textarea asp-for="ReviewText" class="form-control"></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
